<section class="row productlist" itemscope="" itemtype="http://schema.org/WebPage">
    <header class="col-12">
        <h1 itemprop="name">
            {{currentItem.name[]}}
        </h1>
    </header>
    {{#block.items}}
        <article class="{{_id}} col-12 col-lg-4 col-xl-3" >
            <div class="card">
                {{#image}}
                    <a class="card-img-top text-center" href="{{BASE_URI}}{{slug[]}}" >
                        <img
                                src="{{uploads_uri}}{{image}}?h=250"
                                alt="{{name[]}}"
                        />
                    </a>
                {{/image}}
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="{{BASE_URI}}{{slug[]}}" >
                            {{name[]}}
                        </a>
                    </h4>
                </div>
            </div>
        </article>
    {{/block.items}}
</section>
{{> block/readmore}}
{{> bootstrap/pagination}}
