<section>
    <article class="row" >
        <div class="col-12 col-sm-12 col-md-6 col-lg-7 text-center">
            {{> fields/image/singleImageZoom}}
        </div>
        <div class="col-12 col-sm-12 col-md-6 col-lg-5">
            {{> fields/text/header }}
            {{{currentItem.bodytext[]}}}

            {{#currentItem.outOfStock}}
                {{> shop/outOfStock}}
                <div class="row align-items-center">
                    <div class="col-5 col-lg-12 col-xl-5 container-product-price">
                        {{{SHOP_CURRENCY_BASE}}} {{currentItem.price_sale}}
                    </div>
                </div>
                <div
                    itemprop="offers"
                    itemscope
                    itemtype="http://schema.org/Offer"
                >
                    <span itemprop="priceCurrency" content="{{{SHOP_CURRENCY_ISO}}}"></span>
                    <span itemprop="price" content="{{currentItem.price_sale}}"></span>
                    <link itemprop="availability" href="http://schema.org/OutOfStock">
                    <meta itemprop="itemCondition" itemtype="http://schema.org/OfferItemCondition" content="http://schema.org/NewCondition" />
                </div>
            {{/currentItem.outOfStock}}
            {{^currentItem.outOfStock}}
                <div class="d-md-flex justify-content-between align-items-center">
                    {{> fields/shopprice/shopSalePrice}}
                    {{> fields/shopaddtocart/shopAddToCart}}
                </div>
            {{/currentItem.outOfStock}}
            {{#SHOP_TEXT_USP}}
            <div class="container-usp">
                {{{SHOP_TEXT_USP}}}
            </div>
            {{/SHOP_TEXT_USP}}
        </div>
    </article>
</section>
